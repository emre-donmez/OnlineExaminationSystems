@model IEnumerable<OnlineExaminationSystems.UI.Areas.Mutual.Models.Enrollment.Enrollment>

@{
    ViewData["Title"] = "Lessons";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Lessons</h1>

<div class="container">
    <div class="row justify-content-center">
        @foreach (var lesson in Model)
        {
            <div class="col-auto mb-3">
                <a class="btn btn-info btn-lg btn-block" style="min-width: 200px; margin-right: 10px;" href="@Url.Action("Index", "Exam", new { lessonId = lesson.Lesson.Id })">
                    @Html.DisplayFor(modelItem => lesson.Lesson.Name)
                </a>
            </div>
        }
    </div>
</div>