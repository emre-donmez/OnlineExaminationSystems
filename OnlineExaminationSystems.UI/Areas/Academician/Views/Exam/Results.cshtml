@model IEnumerable<OnlineExaminationSystems.UI.Areas.Academician.Models.Result.Result>

@{
    ViewData["Title"] = "Results";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Results</h1>
<button type="button" class="btn btn-primary" id="calculate-button">Calculate Result</button>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.Surname)
            </th>
            <th>
                Exam Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Score)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Name)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Surname)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Exam.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Score)
            </td>
        </tr>
}
    </tbody>
</table>    
<script>
    var examId = parseInt('@TempData["examId"]');
    document.addEventListener('DOMContentLoaded', function () {
        document.getElementById('calculate-button').addEventListener('click', function () {
            fetch('/Exam/CalculateResult', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json' // İçerik türünü belirt
                },
                body: JSON.stringify(examId)
            })
                .then(response => {
                    if (response.ok) {
                        // Başarılı cevap durumunda sayfayı yenile
                        location.reload();
                    } else {
                        // Hata durumunda uygun işlemleri yap
                        console.error('Bir hata oluştu');
                    }
                })
                .catch(error => {
                    console.error('İstek gönderilirken bir hata oluştu:', error);
                });
        });
    });

</script>