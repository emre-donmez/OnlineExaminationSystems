@model IEnumerable<OnlineExaminationSystems.UI.Areas.Mutual.Models.Lesson.Lesson>

@{
    ViewData["Title"] = "Lessons";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/lesson-academician.css" />

<div class="container">
    <h1 class="text-center mt-5">@ViewData["Title"]</h1>
    <div class="table-container">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Id)</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>
                            <a href="@Url.Action("Index", "Exam", item)" class="btn btn-dark">Exams</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
