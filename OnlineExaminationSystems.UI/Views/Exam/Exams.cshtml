@model IEnumerable<OnlineExaminationSystems.UI.Models.Exam>
@{
    ViewBag.Title = "Exams";
}

<h2>Exams</h2>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model=>model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Duration)</th>
            <th>@Html.DisplayNameFor(model => model.QuestionCount)</th>
            <th>@Html.DisplayNameFor(model => model.StartedDate)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var exam in Model)
        {
            <tr>
                <td>@exam.Id</td>
                <td>
                    <a class="custom-link" href="@Url.Action("Questions", "Exam", new { examId = exam.Id })">@exam.Name</a>
                </td>
                <td>@exam.Duration</td>
                <td>@exam.QuestionCount</td>
                <td>@exam.StartedDate.ToShortDateString()</td>
                <td>
                    <a href="@Url.Action("Delete", "Exam", new { examId = exam.Id })" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a href="@Url.Action("Create", "Exam")" class="btn btn-success"<i class="fas fa-plus"></i>Create New</a>
</div>

<style>
    .custom-link {
        color: #007bff;
        text-decoration: none;
        font-weight: bold;
        padding: 5px 10px;
        border-radius: 5px;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

        .custom-link:hover {
            background-color: #f8f9fa;
            color: #0056b3;
        }
</style>


