@model IEnumerable<OnlineExaminationSystems.UI.Models.Exam>

@{
    ViewBag.Title = "Exams";
}

<h2>Exams</h2>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Duration)</th>
            <th>@Html.DisplayNameFor(model => model.QuestionCount)</th>
            <th>@Html.DisplayNameFor(model => model.StartedDate)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var exam in Model)
        {
            <tr>
                <td>@exam.Id</td>
                <td>
                    <a class="custom-link" href="@Url.Action("Questions", "Question", new { examId = exam.Id })">@exam.Name</a>
                </td>
                <td>@exam.Duration</td>
                <td>@exam.QuestionCount</td>
                <td>@exam.StartedDate.ToShortDateString()</td>
                <td>
                    <button class="btn btn-primary" onclick="openEditModal('@exam.Id', '@exam.Name','@exam.LessonId', '@exam.QuestionCount', '@exam.Duration', '@exam.StartedDate'"><i class="fas fa-edit"></i> Edit</button>
                    <button class="btn btn-sm btn-danger" onclick="deleteExam('@exam.Id')">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a href="@Url.Action("Create", "Exam")" class="btn btn-success"><i class="fas fa-plus"></i> Create New</a>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">Edit Exam</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <input type="hidden" id="editId" name="id">
                    <div class="form-group">
                        <label for="editName">Name</label>
                        <input type="text" class="form-control" id="editName" name="name">
                    </div>
                    <div class="form-group">
                        <label for="editQuestionCount">Question Count</label>
                        <input type="number" class="form-control" id="editQuestionCount" name="questionCount">
                    </div>
                    <div class="form-group">
                        <label for="editDuration">Duration (minutes)</label>
                        <input type="number" class="form-control" id="editDuration" name="duration">
                    </div>
                    <div class="form-group">
                        <label for="editStartDate">Start Date</label>
                        <input type="date" class="form-control" id="editStartDate" name="startDate">
                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="save-button">Save changes</button>
            </div>
        </div>
    </div>
</div>



<style>
    .custom-link {
        color: #007bff;
        text-decoration: none;
        font-weight: bold;
        padding: 5px 10px;
        border-radius: 5px;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

        .custom-link:hover {
            background-color: #f8f9fa;
            color: #0056b3;
        }
</style>

<script src="~/js/exam.js"></script>