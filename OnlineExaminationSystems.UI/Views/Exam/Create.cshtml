@model OnlineExaminationSystems.UI.Models.Dtos.ExamUpdateRequestModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create Exam</h1>

<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LessonId" class="control-label"></label>
                <input asp-for="LessonId" class="form-control" />
                <span asp-validation-for="LessonId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuestionCount" class="control-label"></label>
                <input asp-for="QuestionCount" class="form-control" />
                <span asp-validation-for="QuestionCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Duration" class="control-label"></label>
                <input asp-for="Duration" class="form-control" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartedDate" class="control-label"></label>
                <input asp-for="StartedDate" class="form-control" />
                <span asp-validation-for="StartedDate" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-bottom:20px"></div>
            <div class="form-group row">
                <div class="col-md-9">
                    <input type="submit" value="Create" class="btn btn-primary w-100" />
                </div>
                <div class="col-md-3 text-right">
                    <a asp-action="Exams" class="btn btn-secondary w-100">Back</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
