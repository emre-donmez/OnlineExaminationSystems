@model List<OnlineExaminationSystems.UI.Models.Question.QuestionForExam>

@{
    ViewData["Title"] = ViewBag.ExamName;
}

<div style="position: fixed; top: 10px; right: 10px;">
    <span>Time remaining: <span id="timer"></span></span>
</div>

<h1>@ViewBag.ExamName</h1>

<form asp-action="SubmitExam" method="post" id="examForm">
    <input type="hidden" name="UserId" value="2" id="userId" />
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="question">
            <h3>@Html.DisplayFor(model => Model[i].QuestionText)</h3>
            <div class="options">
                @for (int j = 0; j < Model[i].Options.Count; j++)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="radio"
                               name="question_@i"
                               value="@Model[i].Options[j]"
                               id="q@i_option@j"
                               data-question-id="@Model[i].Id" />
                        <label class="form-check-label" for="q@i_option@j">
                            @Model[i].Options[j]
                        </label>
                        <input type="hidden" name="Answers[@i].QuestionId" value="@Model[i].Id" />
                    </div>
                }
            </div>
        </div>
        <hr />
    }

    <button type="submit" class="btn btn-success" id="exam-end-button">Submit Exam</button>
</form>
<script src="/js/examPage.js"></script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        window.onload = function () {
            var duration = @ViewBag.Duration;
            var timer = duration * 60;
            var interval = setInterval(function () {
                var minutes = Math.floor(timer / 60);
                var seconds = timer % 60;
                document.getElementById('timer').textContent = minutes + ":" + (seconds < 10 ? "0" : "") + seconds;
                timer--;
                if (timer < 0) {
                    clearInterval(interval);
                    document.getElementById('examForm').submit();
                }
            }, 1000);
        };
    </script>
}

<style>
    .question {
        margin-bottom: 20px;
    }

    .options {
        margin-left: 20px;
    }

    .form-check-label {
        margin-left: 5px;
    }

    #timer {
        font-size: 16px;
        font-weight: bold;
    }

    .fixed-top-right {
        position: fixed;
        top: 10px;
        right: 10px;
    }
</style>
