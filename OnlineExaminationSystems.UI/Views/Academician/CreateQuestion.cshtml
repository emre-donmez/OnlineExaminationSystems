@{
    <h2>Create Question</h2>

    <form method="post" asp-action="CreateQuestion">
        <div class="form-group">
            <label for="questionText">Question</label>
            <textarea class="form-control" id="questionText" name="QuestionText" rows="4" required></textarea>
        </div>
        <div class="form-group">
            <label for="option1">Option 1:</label>
            <input type="text" class="form-control" id="option1" name="Options[0]" required>
        </div>
        <div class="form-group">
            <label for="option2">Option 2:</label>
            <input type="text" class="form-control" id="option2" name="Options[1]" required>
        </div>
        <div class="form-group">
            <label for="option3">Option 3:</label>
            <input type="text" class="form-control" id="option3" name="Options[2]" required>
        </div>
        <div class="form-group">
            <label for="option4">Option 4:</label>
            <input type="text" class="form-control" id="option4" name="Options[3]" required>
        </div>
        <br />
        <div>
            <button type="submit" class="btn btn-primary">Create Exam Question</button>
        </div>
        
    </form>
}
